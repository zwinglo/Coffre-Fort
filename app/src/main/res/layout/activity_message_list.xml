<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/messagesNoticeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/messages_rcs_notice"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/messagesSyncButton"
        style="@style/Widget.Coffre.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/messages_sync_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/messagesEmailButton"
        style="@style/Widget.Coffre.Button.Accent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:text="@string/messages_email_button" />

    <ProgressBar
        android:id="@+id/messagesProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/messagesEmptyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/messages_empty"
        android:visibility="gone"
        android:paddingTop="12dp" />

</LinearLayout>
